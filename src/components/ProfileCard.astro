---
// src/components/ProfileCard.astro
import type { Profile } from '../types';

interface Props {
  profile: Profile;
}

const { profile } = Astro.props;
---

<a href={`/${profile.username}`} class="block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
  <div class="relative aspect-square w-full overflow-hidden">
    <img 
      src={profile.avatarUrl} 
      alt={`${profile.name}'s avatar`} 
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-4">
    <h3 class="font-bold text-lg">{profile.name}</h3>
    <p class="text-gray-600 text-sm">@{profile.username}</p>
    <p class="text-gray-700 mt-2">{profile.description}</p>
    
    {profile.tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {profile.tags.slice(0, 3).map(tag => (
          <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
            {tag}
          </span>
        ))}
        {profile.tags.length > 3 && (
          <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded-full">
            +{profile.tags.length - 3} more
          </span>
        )}
      </div>
    )}
  </div>
</a>