---
// src/components/DirectoryGrid.astro
import ProfileCard from './ProfileCard.astro';
import type { Profile } from '../types';

interface Props {
  profiles: Profile[];
}

const { profiles } = Astro.props;
---

{profiles.length === 0 ? (
  <div class="text-center py-12 bg-gray-200 dark:bg-gray-800 rounded-lg border border-gray-300 dark:border-gray-700 p-8">
    <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-300">No profiles available</h2>
    <p class="mt-2 text-gray-500 dark:text-gray-400">Check back later for awesome profiles!</p>
    <div class="mt-4">
      <span class="inline-block text-[#a5fd0e] text-2xl">
        <i class="fas fa-users-slash"></i>
      </span>
    </div>
  </div>
) : (
  <div class="flex justify-center w-full">
    <div class={`grid gap-4 sm:gap-6 ${
      profiles.length === 1 
        ? 'grid-cols-1 max-w-sm sm:max-w-md' 
        : profiles.length === 2 
          ? 'grid-cols-1 sm:grid-cols-2 max-w-xs sm:max-w-2xl' 
          : 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl'
    }`}>
      {profiles.map(profile => (
        <ProfileCard profile={profile} />
      ))}
    </div>
  </div>
)}