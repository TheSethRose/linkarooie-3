---
import Layout from '../layouts/Layout.astro';
import DirectoryGrid from '../components/DirectoryGrid.astro';
import { getDirectoryProfiles } from '../data';

const directoryProfiles = getDirectoryProfiles();
---

<Layout title="Linkarooie - Connect with awesome people">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Linkarooie</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        A Linktree-style application that displays user profiles with links and achievements.
      </p>
    </header>
    
    <DirectoryGrid profiles={directoryProfiles} />
  </div>
</Layout>