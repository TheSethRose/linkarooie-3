---
import Layout from '../layouts/Layout.astro';
import DirectoryGrid from '../components/DirectoryGrid.astro';
import { getDirectoryProfiles } from '../data';
import { Image } from 'astro:assets';
import backgroundImage from '../assets/background.svg';
import ogImage from '../assets/images/linkarooie_og.jpg';

const directoryProfiles = getDirectoryProfiles();
---

<Layout title="Linkarooie - Simplify your online presence" ogImage={ogImage}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-900 dark:to-gray-800">
    <div class="absolute inset-0 z-0 opacity-20">
      <Image 
        src={backgroundImage} 
        alt="Background pattern" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-5xl md:text-6xl">
          <span class="block">Link<span class="text-[#9333ea] dark:text-[#a5fd0e]">arooie</span></span>
        </h1>
        <p class="mt-3 sm:mt-4 max-w-2xl mx-auto text-lg sm:text-xl text-gray-700 dark:text-gray-300">
          A Linktree-style app to showcase your profile, links, and achievements
        </p>
        
        <!-- OG Image Display -->
        <div class="mt-6 sm:mt-8 flex justify-center px-4 sm:px-0">
          <div class="relative rounded-xl overflow-hidden shadow-xl w-full max-w-sm sm:max-w-md border-2 border-[#9333ea]/20 dark:border-[#a5fd0e]/20">
            <Image 
              src={ogImage} 
              alt="Linkarooie Preview" 
              class="w-full h-auto transform hover:scale-105 transition-transform duration-300"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Featured Profiles Section -->
  <div class="py-12 bg-gray-100 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Featured Profiles</h2>
        <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">
          Browse example profiles from our community
        </p>
      </div>
      
      <DirectoryGrid profiles={directoryProfiles} />
    </div>
  </div>
  
  <!-- About Linkarooie Section -->
  <div class="py-10 sm:py-14 bg-gradient-to-br from-gray-200 to-gray-100 dark:from-gray-900 dark:to-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 sm:mb-10">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">About <span class="text-[#9333ea] dark:text-[#a5fd0e]">Linkarooie</span></h2>
        <p class="mt-2 max-w-2xl mx-auto text-base sm:text-lg text-gray-700 dark:text-gray-300">
          An open-source alternative to Linktree with a few key features
        </p>
      </div>
      
      <div class="mt-6 sm:mt-8 grid gap-4 sm:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Feature 1 -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg shadow-md p-6 transform hover:scale-105 transition-transform duration-300 border border-gray-200 dark:border-gray-700 hover:border-[#9333ea] dark:hover:border-[#a5fd0e]">
          <div class="text-[#9333ea] dark:text-[#a5fd0e] mb-3">
            <i class="fas fa-link text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Links Management</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Showcase your important links with custom icons and descriptions
          </p>
        </div>
        
        <!-- Feature 2 -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg shadow-md p-6 transform hover:scale-105 transition-transform duration-300 border border-gray-200 dark:border-gray-700 hover:border-[#ff9500] dark:hover:border-[#ff9500]">
          <div class="text-[#ff9500] dark:text-[#ff9500] mb-3">
            <i class="fas fa-trophy text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Achievements</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Display your certifications, milestones, and accomplishments with dates
          </p>
        </div>
        
        <!-- Feature 3 -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg shadow-md p-6 transform hover:scale-105 transition-transform duration-300 border border-gray-200 dark:border-gray-700 hover:border-[#9333ea] dark:hover:border-[#a5fd0e]">
          <div class="text-[#9333ea] dark:text-[#a5fd0e] mb-3">
            <i class="fas fa-moon text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Dark Mode</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Toggle between light and dark themes with a persistent preference
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Get Started Section (Consolidated GitHub Section) -->
  <div class="py-14 bg-accent-purple dark:bg-gray-900 dark:bg-opacity-90 dark:border-t dark:border-[#a5fd0e]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-white dark:text-white">Get Your Own Linkarooie</h2>
        <p class="mt-2 max-w-2xl mx-auto text-lg text-white dark:text-gray-200">
          Fork the project on GitHub to create your own beautiful profile page
        </p>
        <div class="mt-8 flex justify-center">
          <a href="https://github.com/loftwah/linkarooie-3" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-lg text-[#9333ea] bg-white hover:bg-gray-100 dark:text-[#a5fd0e] dark:bg-gray-800 dark:hover:bg-gray-700 transition-all duration-200 transform hover:scale-105">
            <i class="fab fa-github text-xl mr-3"></i> Fork on GitHub
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>